# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Development Settings
NEXT_PUBLIC_USE_AUTH_EMULATOR=true
NEXT_PUBLIC_USE_FIRESTORE_EMULATOR=true
NEXT_PUBLIC_USE_STORAGE_EMULATOR=true

# Application Settings
NEXT_PUBLIC_APP_NAME=WordWise
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Keys (for future use)
NEXT_PUBLIC_GRAMMAR_API_KEY=your_grammar_api_key
NEXT_PUBLIC_AI_API_KEY=your_ai_api_key

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_SUGGESTIONS=true
NEXT_PUBLIC_ENABLE_REAL_TIME_CHECKING=true
NEXT_PUBLIC_ENABLE_COLLABORATION=false 